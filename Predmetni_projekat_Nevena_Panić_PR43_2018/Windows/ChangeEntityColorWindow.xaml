<Window x:Class="Predmetni_projekat_Nevena_Panić_PR43_2018.Windows.ChangeEntityColorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Predmetni_projekat_Nevena_Panić_PR43_2018.Windows"
        mc:Ignorable="d"
        Title="Change Entity Color Window" Height="200" Width="250" WindowStartupLocation="CenterScreen" Background="#171717">
    <Grid>
        <Label Content="New color of entities: " HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="223" Foreground="#DA0037"/>
        <ComboBox x:Name="color_cb" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Margin="15,65,15,0"/>
        <Button x:Name="color_btn" Content="Change color" HorizontalAlignment="Left" Margin="15,106,0,0" VerticalAlignment="Top" Width="210" Background="#444444" Foreground="#DA0037" Click="color_btn_Click"/>
    </Grid>
</Window>
